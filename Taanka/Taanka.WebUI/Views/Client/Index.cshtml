@model IEnumerable<ProductModel>
@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}

<div class="container-fluid">
    <div>
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/Images/Assests/banner1.webp" class="d-block h-100 w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/Images/Assests/banner2.webp" class="d-block h-100 w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/Images/Assests/banner_80.webp" class="d-block h-100 w-100" alt="...">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <div class="jumbotron mt-3" style="background-color:rgb(0, 0, 0, 0.1);">
        <h1 class="display-3 text-center" style="font-size:3.6vw;"> TOP TRENDING </h1>
    </div>



    <div class="row" style="margin-left:14%">
        @foreach (var item in Model)
        {
            <div class="col-3 card pt-1 m-1">
                <h2 style="font-size:1.9vw;" class="text-center" > @item.Title</h2>
                <div>
                    <img class="card-img-top" src="@item.Image_url_path" alt="Card image" style="width:100%">
                    <div class="mt-1 mb-1">  
                        <h3 style="font-size:1.6vw;"> Category : @item.Category </h3>
                        <h3 style="font-size:1.6vw;" class="card-text"> Rs: @item.Price</h3>
                        <a asp-action="ProductDetails" asp-controller="Client" asp-route-id="@item.Id" style="font-size:1.2vw;" class="col btn btn-sm btn-info">Buy <i class="fa fa-shopping-cart"></i></a>
                        <a href="~/client/details/@item.Id" style="font-size:1.2vw;" class="col btn btn-sm btn-danger">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <br />


</div>

