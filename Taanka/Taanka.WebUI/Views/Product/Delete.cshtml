@model ProductModel
@{
    ViewData["Title"] = "Delete Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="text-center jumbotron">
    <h1 style="font-size:2vw;"> Delete Product </h1><br />
    <a asp-controller="Product" asp-action="Manage" class="btn btn-outline-success">Go back <i class="fa fa-arrow-left"></i></a>
</div>

<br />
<div class="container">
    <div class="row">
        <div class="col-4">
            <div>
                <img class="w-100 h-100" src="@Model.Image_url_path" alt="Product Image Null" />
            </div>
        </div>
        <div class="col-8">
            <div class="row">
                <div class="col-4">
                    <h4 style="font-size:1.9vw;"> Product Name: </h4>
                </div>
                <div class="col-8">
                    <p style="font-size:1.7vw;"> @Model.Title </p>
                </div>
            </div>
             <hr />
            <div class="row">
                <div class="col-4">
                    <h4 style="font-size:1.9vw;"> Description: </h4>
                </div>
                <div class="col-8">
                    <p style="font-size:1.7vw;"> @Model.Description </p>
                </div>
            </div>
             <hr />
            <div class="row">
                <div class="col-4">
                    <h4 style="font-size:1.9vw;"> Sub-Category: </h4>
                </div>
                <div class="col-8">
                    <p style="font-size:1.7vw;"> @Model.SubCategory </p>
                </div>
            </div> <hr />
            <div class="row">
                <div class="col-4">
                    <h4 style="font-size:1.9vw;"> Price: </h4>
                </div>
                <div class="col-8">
                    <p style="font-size:1.7vw;"> @Model.Price </p>
                </div>
            </div> 
            <hr />
        </div>
    </div>
</div>

<div class="">
    <form asp-action="Delete" method="post" enctype="multipart/form-data">
        <fieldset>
            @Html.Hidden("Id")
            <br />
            <div class="text-center">
                <button type="submit" class="btn btn-danger"> Delete </button>
                <a asp-action="Manage" class="btn btn-primary"> Cancel </a>
            </div>
        </fieldset>
    </form>
</div>